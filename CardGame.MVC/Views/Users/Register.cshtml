@model CardGame.MVC.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Register";
}

<h1>Register</h1>

<div asp-validation-summary="ModelOnly" class="errordiv"></div>

<form asp-action="Login">
    <div class="form-group row">
        <label asp-for="Email" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Email" class="form-control" placeholder="Username" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Password" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Password" type="password" class="form-control" placeholder="Password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="RepeatPassword" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="RepeatPassword" type="password" class="form-control" placeholder="Password" />
            <span asp-validation-for="RepeatPassword" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-primary btn-lg">Register</button>
        </div>
    </div>
</form>